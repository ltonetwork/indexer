{
  "name": "indexer",
  "version": "1.1.0",
  "description": "Index LTO Network transactions to query information like anchors and DIDs",
  "keywords": [
    "blockchain",
    "anchor",
    "DID",
    "verifiable-credentials"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "build": "rm -rf dist && tsc && npm run postbuild",
    "postbuild": "cp -r src/config/data dist/config",
    "prestart:prod": "npm run build",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --detectOpenHandles --forceExit --coverage",
    "test:e2e": "jest --detectOpenHandles --forceExit --runInBand --config ./test/jest-e2e.json",
    "test:all": "npm run test:e2e && npm run test:cov",
    "webpack": "webpack --config webpack.config.js"
  },
  "authors": [
    {
      "name": "Arnold Daniels",
      "email": "arnold@ltonetwork.com"
    },
    {
      "name": "Sven Stam",
      "email": "sven@ltonetwork.com"
    },
    {
      "name": "Sergey Boltonosov",
      "email": "minstriely@gmail.com"
    }
  ],
  "license": "ISC",
  "dependencies": {
    "@lto-network/lto-crypto": "^1.1.0",
    "@nestjs/common": "^7.6.0",
    "@nestjs/core": "^7.6.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/swagger": "^4.8.0",
    "@types/crypto-js": "^4.0.1",
    "amqplib": "^0.5.6",
    "await-lock": "^2.1.0",
    "axiom": "^0.1.6",
    "axios": "^0.21.1",
    "boolean": "^0.2.0",
    "connection-string": "^1.1.0",
    "convict": "^6.0.1",
    "cors": "^2.8.5",
    "crypto-js": "^3.3.0",
    "delay": "^3.1.0",
    "event-stream": "^3.3.5",
    "fastify-formbody": "^2.1.0",
    "helmet": "^3.23.3",
    "ioredis": "^4.22.0",
    "level": "^5.0.1",
    "lto-api": "^0.3.6",
    "moment": "^2.29.1",
    "nocache": "^2.1.0",
    "offset-stream": "^1.0.2",
    "pascal-case": "^2.0.1",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^3.10.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.6.0",
    "@types/amqplib": "^0.5.17",
    "@types/axios": "^0.14.0",
    "@types/convict": "^4.2.1",
    "@types/delay": "^3.1.0",
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.22.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "jest": "^26.6.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "supertest": "^3.4.2",
    "ts-jest": "^26.5.0",
    "ts-loader": "^4.5.0",
    "ts-node": "^6.2.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^4.2.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
