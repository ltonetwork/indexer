{
  "compilerOptions": {
    "module": "node16",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["ES2019"],
  }
}
